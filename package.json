{
  "name": "the-daily-holler",
  "version": "1.0.0",
  "description": "The Daily Holler - Local events and community activities across America's cities",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start:prod": "cd server && npm start",
    "heroku-postbuild": "npm run build",
    "generate-daily": "node run-daily-generation.js",
    "cron:articles": "node run-daily-generation.js"
  },
  "keywords": [
    "the-daily-holler",
    "local-events",
    "community-activities",
    "local-news",
    "things-to-do"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "openai": "^5.23.1",
    "pg": "^8.11.3"
  }
}
